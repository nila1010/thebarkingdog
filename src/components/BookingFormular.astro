<section>
	<article>
		<h1>Booking</h1>
		<img src="/logo/snerleskull.svg" alt="snerle grafik" />
		<p>Book dit bord her, ved at udfylde formularen!</p>
	</article>
	<form name="Booking" method="post" netlify>
		<label for="name"> Navn</label>
		<input id="name" name="Navn" placeholder="Navn" type="text" required />
		<label for="email"> Email</label>
		<input id="email" name="Email" placeholder="Email" type="email" required />
		<label for="dato"> Dato</label>
		<input id="dato" name="Dato" placeholder="Dato" type="date" required />
		<label for="tid"> Tid</label>
		<input id="tid" name="Tid" placeholder="Tid" type="time" required />
		<label for="antal"> Antal personer</label>
		<input id="antal" name="Antal personer" placeholder="Antal personer" type="number" required />
		<textarea id="text" placeholder="Evt.bemÃ¦rkninger"></textarea>
		<button type="submit">SEND</button>
	</form>
</section>

<style>
	section {
		grid-column: 1;
		grid-row: 1;
		background-color: var(--background-color-primary);
		max-width: 550px;
		margin: 30rem 35rem 4rem 3rem;
		padding: 0 20px 80px 20px;
		border-radius: 30px;
	}

	article {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	img {
		max-width: 200px;
	}

	h1 {
		margin-left: 8px;
	}

	label {
		height: 1px;
		margin: -1px;
		overflow: hidden;
		position: absolute;
	}

	form {
		margin-top: 50px;
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	input {
		padding: 15px;
		border-radius: 20px;
		height: 40px;
		background-color: #fff5d7;
		color: #35404a;
	}

	input::placeholder {
		color: #35404a;
	}

	textarea {
		padding: 15px;
		border-radius: 20px;
		height: 150px;
		background-color: #fff5d7;
		color: #35404a;
	}

	textarea::placeholder {
		color: #35404a;
	}

	button {
		background-color: #fff5d7;
		border-radius: 20px;
		font-family: var(--h-font);
		font-size: 35px;
		color: #35404a;
	}

	@media (max-width: 750px) {
		section {
			grid-row: 2;
			margin: -60% auto 0 auto;
		}
	}
	@media (max-width: 500px) {
		h1 {
			padding-top: 30px;
		}
	}
</style>
