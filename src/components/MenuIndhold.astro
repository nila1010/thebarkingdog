---
const { navndrink, pris, beskrivelse, tekst } = Astro.props
---

<article>
	<div>
		<div class="flextitle">
			<h2>{navndrink}</h2>
			<h2>{pris}</h2>
		</div>
		<h3>{beskrivelse}</h3>
	</div>
	<p>{tekst}</p>
</article>

<style>
	article {
		display: flex;
		flex-direction: column;
	}
	p {
		color: var(--background-color-primary);
		font-size: 14px;
		line-height: 16px;
	}
	.flextitle {
		display: flex;
		justify-content: space-between;
	}
</style>
