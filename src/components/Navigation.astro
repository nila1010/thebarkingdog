---
const { title } = Astro.props
---

<nav>
	<a href="/index"><img src="/logo/logonav.svg" alt="The Barking Dog logo" /></a>
	<div id="burger">
		<span></span>
		<span></span>
		<span></span>
		<span></span>
	</div>
	<article class="navdispno">
		<a
			class={title == 'Om baren | Uformel cocktailbar ved Sankt Hans Torv på Nørrebro' && 'active'}
			href="/ombaren">Om Baren</a
		>
		<a
			class={title == 'Booking | Uformel cocktailbar ved Sankt Hans Torv på Nørrebro' && 'active'}
			href="/booking">Booking</a
		>
		<a
			class={title == 'Menukort | Uformel cocktailbar ved Sankt Hans Torv på Nørrebro' && 'active'}
			href="/menu">Menukort</a
		>
		<a
			class={title == 'Kontakt| Uformel cocktailbar ved Sankt Hans Torv på Nørrebro' && 'active'}
			href="/kontakt">Kontakt</a
		>
	</article>
</nav>

<style>
	nav {
		display: flex;
		background-color: var(--background-color-primary);
		justify-content: space-between;
	}
	img {
		aspect-ratio: 120/175.85;
		margin: 20px;
		width: 100px;
	}
	article {
		position: absolute;
		width: 100%;
		height: 480px;
		z-index: 10;
		padding-top: 80px;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1px;
		background-color: var(--background-color-primary);
		animation-name: falling_kf;
		animation-duration: 0.8s;
		animation-fill-mode: backwards;
		animation-timing-function: ease-in-out;
	}

	.navdispno {
		display: none;
	}

	a {
		font-size: 60px;
	}

	.active {
		text-decoration: underline;
	}

	/*BURGER MENU*/

	#burger {
		display: block;
		width: 50px;
		height: 60px;
		position: relative;
		transition: 0.5s ease-in-out;
		z-index: 11;
		margin: 10px 20px;
	}

	#burger span {
		display: block;
		position: absolute;
		height: 5px;
		width: 100%;
		background: #c46259;
		transition: 1s ease-in-out;
	}

	#burger span:nth-child(1) {
		top: 10px;
	}

	#burger span:nth-child(2),
	#burger span:nth-child(3) {
		top: 25px;
	}

	#burger span:nth-child(4) {
		top: 40px;
	}

	#burger.open span:nth-child(1) {
		top: 15px;
		width: 0%;
		left: 50%;
	}

	#burger.open span:nth-child(2) {
		transform: rotate(45deg);
		top: 26px;
	}

	#burger.open span:nth-child(3) {
		transform: rotate(-45deg);
		top: 26px;
	}

	#burger.open span:nth-child(4) {
		top: 15px;
		width: 0%;
		left: 50%;
	}

	@keyframes falling_kf {
		from {
			transform: translate(0, -100%);
		}

		to {
			transform: translate(0);
		}
	}

	@media (min-width: 750px) {
		nav {
			padding: 30px 50px 0px 30px;
		}

		article {
			position: relative;
			gap: 20px;
			width: auto;
			height: fit-content;
			padding-top: 30px;
			flex-direction: row;
			background-color: transparent;
			animation-name: none;
		}
		.navdispno {
			display: flex;
		}

		img {
			width: 150px;
		}

		a {
			font-size: 22px;
		}

		#burger {
			display: none;
		}
	}
	@media (min-width: 900px) {
		a {
			font-size: 25px;
		}
	}
	@media (min-width: 1000px) {
		article {
			gap: 30px;
		}
		a {
			font-size: 30px;
		}
		img {
			width: 200px;
		}
	}
	@media (min-width: 1200px) {
		a {
			font-size: 35px;
		}
	}
</style>

<script>
	const ikon = document.querySelector('#burger')
	const disp = document.querySelector('article')

	ikon.addEventListener('click', openClose)

	function openClose() {
		ikon.classList.toggle('open')
		const ikonShown = ikon.classList.contains('open')
		if (ikonShown) {
			ikon.classList.add('open')
			disp.classList.remove('navdispno')
		} else {
			ikon.classList.remove('open')
			disp.classList.add('navdispno')
		}
	}
</script>
